# ===============================
# Environment mode
# ===============================
# Use "test" to skip S3 and load local files only.
# Set to "prod" when running the full app with AWS enabled.
APP_ENV=test

# ===============================
# AWS Configuration
# ===============================

AWS_REGION=eu-north-1
S3_BUCKET=late-shipments-artifacts-bengt

# Stable artifact pointers (always point to latest versions)
SCALER_KEY=preprocessing/latest/scaler.pkl
ONEHOT_KEY=preprocessing/latest/onehot_encoder.pkl
ORDINAL_KEY=preprocessing/latest/ordinal_encoder.pkl
LATE_MODEL_KEY=models/late_model/latest/late_model.pkl
VERY_LATE_MODEL_KEY=models/very_late_model/latest/very_late_model.pkl

# ===============================
# Behavior toggle
# ===============================
# If true → retrain_pipeline uploads artifacts to S3 and updates "latest/" paths.
# If false → runs fully locally with no AWS calls.
UPLOAD_TO_S3=false